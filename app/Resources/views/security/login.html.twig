{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block buttons %}
    <div class="col-xs-6 col-sm-3">
        <a class="btn btn-wapi w-12 m-b-1 m-t-2" id="new-book" href="{{ path('homepage') }}">
            <span class="pull-left">New Book</span>
            <img class="pull-right img-menu" src="{{ asset('new.png') }}">
        </a>
    </div>
    <div class="col-xs-6 col-sm-3">
        <a class="btn btn-wapi w-12 m-b-1 m-t-2" id="register" href="{{ path('register') }}"><span
                    class="pull-left">Register</span></a>
    </div>
{% endblock %}
{% block body %}
    <div class="center-block">
        <div class="row">
            <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6 text-center">
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" id="user_username" placeholder="Username"
                               name="_username" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" placeholder="Password"
                               name="_password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="form-group">
                        <button type="submit" class="btn btn-wapi col-xs-offset-3 col-xs-6">
                            <span class="pull-left">Login</span>
                            <img class="pull-right img-menu" src="{{ asset('key.png') }}"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
